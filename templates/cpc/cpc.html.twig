							<td style="text-align: center;">

									{% set TotalA = 0 %}
									{% set TotalB = 0 %}
									{% set TotalAB = 0 %}
									{% set TotalC = 0 %}
									{% set TotalD = 0 %}
									{% set TotalE = 0 %}
									{% set TotalF = 0 %}
									{% set TotalG = 0 %}

									{% for s in cpcs %}

										{% if s.type == 'A' %}{% set TotalA = TotalA +  s.Exer1  %}{% endif %}
										{% if s.type == 'B' %}{% set TotalB = TotalB +  s.Exer1  %}{% endif %}
										{% set TotalAB =  TotalA + TotalB  %}
										{% if s.type == 'C' %}{% set TotalC = TotalC +  s.Exer1  %}{% endif %}
										{% if s.type == 'D' %}{% set TotalD = TotalD +  s.Exer1  %}{% endif %}
										{% if s.type == 'E' %}{% set TotalE = TotalE +  s.Exer1  %}{% endif %}
										{% if s.type == 'F' %}{% set TotalF = TotalF +  s.Exer1  %}{% endif %}
										{% if s.type == 'G' %}{% set TotalG = TotalG +  s.Exer1  %}{% endif %}
										
									{% endfor %}

									{% if cpc.type == 'TA' %}{% if TotalA == 0 %}{% else %}{{ TotalA |number_format(2, ' , ' ,  '  ') }}{% endif %}{% else %}
									{% if cpc.Exer1 == 0 %}{% else %}{{ cpc.Exer1 |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
