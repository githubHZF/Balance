									{% if cpc.type == 'TC' %}{% if TotalC == 0 %}{% else %}{{ TotalC |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TD' %}{% if TotalD == 0 %}{% else %}{{ TotalD |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TE' %}{% if TotalE == 0 %}{% else %}{{ TotalE |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TF' %}{% if TotalF == 0 %}{% else %}{{ TotalF |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TG' %}{% if TotalG == 0 %}{% else %}{{ TotalG |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									
							</td>

							<td style="text-align: center;" id="compte">{{ cpc.Compte }}</td>

							<td style="text-align: center;">

									{% set TotalA = 0 %}
									{% set TotalB = 0 %}
									{% set TotalAB = 0 %}
									{% set TotalC = 0 %}
									{% set TotalD = 0 %}
									{% set TotalE = 0 %}
									{% set TotalF = 0 %}
									{% set TotalG = 0 %}

									{% for s in cpcs %}

										{% if s.type == 'A' %}{% set TotalA = TotalA +  s.Exer2  %}{% endif %}
										{% if s.type == 'B' %}{% set TotalB = TotalB +  s.Exer2  %}{% endif %}
										{% set TotalAB =  TotalA + TotalB  %}
										{% if s.type == 'C' %}{% set TotalC = TotalC +  s.Exer2  %}{% endif %}
										{% if s.type == 'D' %}{% set TotalD = TotalD +  s.Exer2  %}{% endif %}
										{% if s.type == 'E' %}{% set TotalE = TotalE +  s.Exer2  %}{% endif %}
