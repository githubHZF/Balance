									{% if cpc.type == 'TF' %}{% if TotalF == 0 %}{% else %}{{ TotalF |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TG' %}{% if TotalG == 0 %}{% else %}{{ TotalG |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
							</td>

							<td style="text-align: center;">

									{% set TotalA = 0 %}
									{% set TotalB = 0 %}
									{% set TotalAB = 0 %}
									{% set TotalC = 0 %}
									{% set TotalAC = 0 %}
									{% set TotalD = 0 %}
									{% set TotalE = 0 %}
									{% set TotalDE = 0 %}
									{% set TotalAE = 0 %}
									{% set TotalF = 0 %}
									{% set TotalG = 0 %}
									{% set TotalFG = 0 %}
									{% set TotalAG = 0 %}
									{% set TotalTT = 0 %}
									{% set TAZE = 0 %}
									{% set TAZEE = 0 %}

									{% for s in cpcs %}

										{% if s.type == 'A' %}{% set TotalA = TotalA +  s.Total  %}{% endif %}
										{% if s.type == 'B' %}{% set TotalB = TotalB +  s.Total  %}{% endif %}
										{% set TotalAB =  TotalA + TotalB  %}
										{% if s.type == 'C' %}{% set TotalC = TotalC +  s.Total  %}{% endif %}
										{% set TotalAC =  TotalAB - TotalC  %}
										{% if s.type == 'D' %}{% set TotalD = TotalD +  s.Total  %}{% endif %}
										{% if s.type == 'E' %}{% set TotalE = TotalE +  s.Total  %}{% endif %}
										{% set TotalDE =  TotalD - TotalE  %}
										{% set TotalAE =  TotalAC + TotalDE  %}
										{% if s.type == 'F' %}{% set TotalF = TotalF +  s.Total  %}{% endif %}
										{% if s.type == 'G' %}{% set TotalG = TotalG +  s.Total  %}{% endif %}
										{% set TotalFG =  TotalF - TotalG  %}
										{% set TotalAG =  TotalAE + TotalFG  %}
										{% set TotalTT =  TotalAG  %}
										{% set TAZE =  TotalAB + TotalD + TotalF  %}
										{% set TAZEE =  TotalC + TotalE + TotalG +  TotalAG + TotalTT %}
										
									{% endfor %}

									{% if cpc.type == 'TA' %}{% if TotalA == 0 %}{% else %}{{ TotalA |number_format(2, ' , ' ,  '  ') }}{% endif %}{% else %}
									{% if cpc.Total == 0 %}{% else %}{{ cpc.Total |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TB' %}{% if TotalAB == 0 %}{% else %}{{ TotalAB |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TC' %}{% if TotalC == 0 %}{% else %}{{ TotalC |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TAC' %}{% if TotalC == 0 %}{% else %}{{ TotalAC  |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TD' %}{% if TotalD == 0 %}{% else %}{{ TotalD |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TE' %}{% if TotalE == 0 %}{% else %}{{ TotalE |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TDE' %}{% if TotalE == 0 %}{% else %}{{ TotalDE |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TAE' %}{% if TotalE == 0 %}{% else %}{{ TotalAE |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TF' %}{% if TotalF == 0 %}{% else %}{{ TotalF |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TG' %}{% if TotalG == 0 %}{% else %}{{ TotalG |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TFG' %}{% if TotalFG == 0 %}{% else %}{{ TotalFG |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TAG' %}{% if TotalAG == 0 %}{% else %}{{ TotalAG |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TTT' %}{% if TotalTT == 0 %}{% else %}{{ TotalTT |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TAZE' %}{% if TAZE == 0 %}{% else %}{{ TAZE |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TAZEE' %}{% if TAZEE == 0 %}{% else %}{{ TAZEE |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									
							</td>

								<td style="text-align: center;"></td>

							<td>
								{% if cpc.Grp == 1 %}<i class="fas fa-plus colorTr"></i>{% endif %}
								{% if cpc.Grp == 3 %}<i class="fas fa-plus colorTe"></i>{% endif %}
							</td>



						</tr>

							{% set ResultatNet = 0 %}

						{% if cpc.type == 'TTT' %}
						
							{% set ResultatNet = TotalTT %}

								<script>

									$(document).ready(function(){
										var ResultatNet = '{{ ResultatNet }}';
										$.ajax({
											url: "/test",
											method: 'POST',
											data: {ResultatNet: ResultatNet},
										}); 
									});

								</script>

						{% endif %}

					{% endfor %}

				</tbody>
			</table>
