										{% if s.type == 'G' %}{% set TotalG = TotalG +  s.Exer2  %}{% endif %}
										
									{% endfor %}

									{% if cpc.type == 'TA' %}{% if TotalA == 0 %}{% else %}{{ TotalA |number_format(2, ' , ' ,  '  ') }}{% endif %}{% else %}
									{% if cpc.Exer2 == 0 %}{% else %}{{ cpc.Exer2 |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TB' %}{% if TotalAB == 0 %}{% else %}{{ TotalAB |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TC' %}{% if TotalC == 0 %}{% else %}{{ TotalC |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
									{% if cpc.type == 'TD' %}{% if TotalD == 0 %}{% else %}{{ TotalD |number_format(2, ' , ' ,  '  ') }}{% endif %}{% endif %}
